{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": "./",
        "paths": {
            "@/*": [
                "resources/ts/*"
            ]
        }
    },
    "include": [
        "resources/ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
